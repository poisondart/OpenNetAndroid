<?xml version="1.0" encoding="utf-8"?>
<manifest package="ru.openet.nix.opennetclient"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".OpenNetApp">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ArticleHostActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppThemeArticle">
        </activity>
        <activity android:name=".SettingsHolderActivity"
                  android:configChanges="keyboardHidden|orientation|screenSize"
                  android:parentActivityName=".MainActivity"
                  android:theme="@style/AppThemeSettings">
        </activity>
    </application>

</manifest>